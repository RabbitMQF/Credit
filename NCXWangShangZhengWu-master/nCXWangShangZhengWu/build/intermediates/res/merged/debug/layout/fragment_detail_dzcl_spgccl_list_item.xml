<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="@dimen/width_1_100"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_detail_dzcl_spcgcl"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/width_10_100"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_small_size" />

    <ImageButton
        android:id="@+id/btn_detail_dzcl_spcgcl"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_search_fj"
        android:contentDescription="@string/_name"
        android:gravity="center_vertical" />

</LinearLayout>