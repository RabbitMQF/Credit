<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="@dimen/width_1_100"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sjdj_shouli_tjcl_tjcl"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/width_1_100"
        android:layout_weight="5"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/shoulididian_"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:id="@+id/sjdj_shouli_tjcl_yscl"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:layout_weight="1.1"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/width_60_100"
        android:text="@string/shoulididian_"
        android:textColor="@color/black"
        android:textSize="@dimen/text_smaller_size"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/ib_sjdj_shouli_tjcl_dzcl"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/width_1_100"
        android:layout_weight="1"
        android:background="@drawable/btn_uploads"
        android:contentDescription="@string/app_name"
        android:gravity="center" />

    <CheckBox
        android:id="@+id/cb_sjdj_shouli_tjcj_cb_shouqu"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/width_1_100"
        android:layout_weight="0.1"
        android:button="@drawable/checkbox_style"
        android:gravity="center_vertical"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/cb_sjdj_shouli_tjcj_cb_caiji"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1.2"
        android:button="@drawable/checkbox_style" />

</LinearLayout>