<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timePicker1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/datepickerbg" >

    <include
        android:layout_height="12dp"
        layout="@layout/timepicker_title" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <com.ZWPT.view.DatePickDialog.WheelView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.ZWPT.view.DatePickDialog.WheelView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.ZWPT.view.DatePickDialog.WheelView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.ZWPT.view.DatePickDialog.WheelView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.ZWPT.view.DatePickDialog.WheelView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
        <com.ZWPT.view.DatePickDialog.WheelView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
            android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"    
        >
        <Button
            android:id="@+id/timepicker_positive"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="#fff"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:visibility="gone"
                    android:layout_height="40dp"/>
        <Button  
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:id="@+id/timepicker_negative"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:text="取消"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_weight="1"
                    android:layout_height="40dp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/timepicker_neutral"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:text="取消"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_weight="1"
                    android:layout_height="40dp"
            />
    </LinearLayout>
</LinearLayout>
