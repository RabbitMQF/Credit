<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="@dimen/width_1_100"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_detail_sjdj_tjcl_1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/width_1_100"
        android:layout_weight="5"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/shoulididian_"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small_size" />

    <ImageButton
        android:id="@+id/ib_detail_sjdj_dzzz"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/width_1_100"
        android:layout_weight="1"
        android:background="@drawable/btn_search_fj"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_detail_sjdj_tjcl_2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/shoulididian_"
        android:textColor="@color/black"
        android:textSize="@dimen/text_smaller_size" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_sjdj"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_2_100"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width_1_100"
            android:layout_marginRight="@dimen/width_1_100"
            android:background="@drawable/icon_have"
            android:contentDescription="@android:string/cancel"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>