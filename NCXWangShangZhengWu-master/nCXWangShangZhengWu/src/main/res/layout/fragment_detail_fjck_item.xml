<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/width_1_100"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/width_10_100"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/width_60_100"
        android:text="@string/shoulididian_"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small_size" />

    <ImageButton
        android:id="@+id/iv_fjck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/width_3_100"
        android:layout_weight="1"
        android:background="@drawable/btn_search_fj"
        android:contentDescription="@android:string/cancel"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_fjck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/width_3_100"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="无附件"
        android:textColor="@color/blue_1"
        android:textSize="@dimen/text_small_size" />

</LinearLayout>