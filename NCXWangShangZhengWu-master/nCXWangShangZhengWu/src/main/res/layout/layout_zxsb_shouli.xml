<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green"
    android:orientation="vertical" >

    <!-- <com.ZWPT.view.CustomTitle
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.ZWPT.view.CustomTitle> -->

    <include layout="@layout/zwgk_view_title" />
    <include layout="@layout/custom_title_two"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/layout_zxsb_shouli_sfyz_item" />
            <include layout="@layout/layout_zxsb_shouli_lxfs_item" />
            <include layout="@layout/layout_zxsb_shouli_shff_item" />
            <include layout="@layout/layout_zxsb_shouli_bltj_item" />
            <include layout="@layout/layout_zxsb_shouli_tjcl_item" />
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_1_100"
                android:layout_marginLeft="@dimen/height_2_100"
                android:layout_marginRight="@dimen/height_2_100"
                android:layout_marginTop="@dimen/height_1_100"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_list_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_1_100"
                    android:text="@string/cancel"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_list_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_2_100"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_1_100"
                    android:text="下一步"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />

              <!--   <Button
                    android:id="@+id/btn_list_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_2_100"
                    android:layout_weight="3.6"
                    android:background="@drawable/custom_button"
                    android:gravity="center"
                    android:paddingBottom="@dimen/height_1_100"
                    android:text="@string/done_bdlr"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" /> -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>