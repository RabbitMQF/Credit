<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="@dimen/width_1_100"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_detail_sjdj_bltjqk"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/width_10_100"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_small_size" />

    <ImageView
        android:id="@+id/iv_detail_sjdj_bltjqk"
        android:layout_width="@dimen/width_3_100"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:background="@drawable/icon_have"
        android:contentDescription="@android:string/cancel"
        android:gravity="center_vertical" />

</LinearLayout>