<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_green"
    android:orientation="vertical"
    android:layout_margin="@dimen/height_1_100"
    android:id="@+id/ll_detail_btn_3"
    android:visibility="gone"  >

    <!-- 底部的三个固定按钮 -->


    <!-- Button -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_chuliyewu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_custom"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="处理业务"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_zantingyewu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_custom"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="暂停业务"
            android:textColor="#FFFFFF" 
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_buzhengtongzhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_custom"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="补正通知"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
        
                <Button
            android:id="@+id/btn_tuihuiyewu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_custom"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="退回业务"
            android:textColor="#FFFFFF" 
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>