<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_rll1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_1_100"
    android:layout_marginRight="@dimen/height_2_100"
    android:layout_marginTop="@dimen/height_1_100"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_beizhu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.95"
        android:gravity="center"
        android:text="@string/search_apply_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_middle_size" />

    <ImageView
        android:id="@+id/iv_icon1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_1_100"
        android:layout_marginTop="@dimen/height_2_100"
        android:layout_weight="0.05"
        android:background="@drawable/icon_not_null"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edt_job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/height_1_100"
        android:layout_weight="2"
        android:background="@drawable/bg_edit"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/height_1_100"
        android:singleLine="true" />

</LinearLayout>