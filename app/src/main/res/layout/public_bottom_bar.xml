<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@mipmap/detail_top" >
        <LinearLayout
            android:id="@+id/pb_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pb_1i"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/btm_1"/>
            <TextView
                android:id="@+id/pb_1t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pb_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pb_2i"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/btm_2"/>
            <TextView
                android:id="@+id/pb_2t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="评论"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pb_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pb_3i"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/btm_3"/>
            <TextView
                android:id="@+id/pb_3t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="投诉"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pb_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pb_4_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/btm_4_n"/>
            <TextView
                android:id="@+id/pb_4_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="关注"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>