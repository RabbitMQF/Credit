                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="评论"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@mipmap/detail_top"
                />
