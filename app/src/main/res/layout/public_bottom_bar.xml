                    android:background="@mipmap/btm_1"/>
                <TextView
                    android:id="@+id/pb_1t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="首页"/>
            </LinearLayout>
            <LinearLayout
