<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEF"
    android:orientation="vertical"
    tools:context="com.example.credit.Activitys.MyCommentlistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/details_con_bg"
        android:orientation="horizontal">
        <com.example.credit.Views.RoundImageView
            android:id="@+id/mycomm_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/me_icon02"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mycomm_gongs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业：江西智容"
                android:textColor="#757475"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/mycomm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间：2016-05-02"
                android:textColor="#757475"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/mycomm_conn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容：时间sssssssss事实上事实上事实上事实上事实上事实上："
                android:textColor="#757475"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
