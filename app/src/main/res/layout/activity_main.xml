<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:alucard="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ab"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.credit.Views.SlidingMenu
        android:id="@+id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        alucard:rightPadding="125dp"
        android:background="@mipmap/slidingmenu_backiamge">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/left_menu" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@mipmap/banner3"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/togg"
                                android:layout_width="30dip"
                                android:layout_height="30dip"
                                android:background="@drawable/gang3"
                                android:onClick="toggleMenu"
                                android:layout_marginTop="15dip"
                                android:layout_marginLeft="15dip"/>
                            <!--<TextView-->
                                <!--android:layout_centerHorizontal="true"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="精准·全面的企业查询平台"-->
                                <!--android:textStyle="normal"-->
                                <!--android:textColor="#000000"-->
                                <!--android:layout_marginTop="45dp"-->
                                <!--android:textSize="18sp" />-->
                            <RelativeLayout
                                android:id="@+id/top_search"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="60dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/maintop_shape">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:background="@mipmap/ss_icon" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="45dp"
                                    android:text="请输入企业名、人名、品牌等关键字"
                                    android:textStyle="normal"
                                    android:textColor="#999999"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="#FFFFFF"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="热搜："
                                android:textColor="#7E8287"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/hot_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="中国瑞林"
                                android:textColor="@color/blue1"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/hot_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="泰豪科技股份"
                                android:textColor="@color/blue1"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/hot_huan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="换一批"
                                android:textColor="@color/blue1"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="#DAEAFC"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:text="查企业"
                                android:textColor="#7E8287"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <LinearLayout
                                android:id="@+id/tab1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@mipmap/maintop_1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="企业查询"
                                    android:layout_marginTop="10dp"
                                    android:textColor="#424D51"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tab2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@mipmap/maintop_2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="法人查询"
                                    android:layout_marginTop="10dp"
                                    android:textColor="#424D51"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tab3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@mipmap/maintop_4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="品牌查询"
                                    android:layout_marginTop="10dp"
                                    android:textColor="#424D51"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tab4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@mipmap/maintop_3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="失信查询"
                                    android:layout_marginTop="10dp"
                                    android:textColor="#424D51"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="#DAEAFC"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:text="查专项"
                                android:textColor="#7E8287"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <com.example.credit.Views.MyGridView
                            android:id="@+id/myGridViewMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="2"
                            android:background="#D2D0D0"
                            android:horizontalSpacing="1.5dp"
                            android:verticalSpacing="1.5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            >
                            <com.example.credit.Views.ImageCycleView
                                android:id="@+id/icv_topView"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"></com.example.credit.Views.ImageCycleView>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="#DAEAFC"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_centerVertical="true"
                                android:text="最新认领"
                                android:textColor="#7E8287"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/cliam_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:text="查看更多>"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/blue1"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <com.example.credit.Views.MyListView
                            android:id="@+id/NewClaimListview"
                            android:layout_width="match_parent"
                            android:layout_height="100dip"
                            android:scrollbars="none"
                            android:background="#EEEEEF"
                            android:listSelector="@color/tou"
                            android:divider="#00000000"
                            />
                        <TextView
                            android:id="@+id/NewClaimTxT"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="暂无数据!"
                            android:visibility="gone"
                            android:textColor="#7E8287"
                            android:textSize="16sp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="#DAEAFC"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_centerVertical="true"
                                android:text="最新热点"
                                android:textColor="#7E8287"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/news_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:text="查看更多>"
                                android:visibility="gone"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/blue1"
                                android:textSize="16sp" />

                        </RelativeLayout>
                        <ScrollView
                            android:id="@+id/scmain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <com.example.credit.Views.MyListView
                                    android:id="@+id/news_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="none"
                                    android:background="#EEEEEF"
                                    android:listSelector="@color/tou"
                                    android:divider="#00000000"
                                    android:dividerHeight="0.5dp"/>
                                <Button
                                    android:visibility="gone"
                                    android:id="@+id/btmore"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="加载更多"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"/>
                                <TextView
                                    android:id="@+id/News_list_null"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:text="暂无数据!"
                                    android:visibility="gone"
                                    android:textColor="#7E8287"
                                    android:textSize="16sp" />

                            </LinearLayout>
                        </ScrollView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            />

                    </LinearLayout>
                </ScrollView>
            </FrameLayout>
        </LinearLayout>

    </com.example.credit.Views.SlidingMenu>

</RelativeLayout>
