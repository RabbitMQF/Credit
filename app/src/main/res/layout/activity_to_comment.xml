<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEF"
    tools:context="com.example.credit.Activitys.ToCommentActivity">
    <include layout="@layout/public_top_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/details_con_bg">
        <com.example.credit.Utils.ContainsEmojiEditText
            android:id="@+id/To_details"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="14sp"
            android:textColor="#757475"
            android:gravity="top"
            android:hint=""
            android:padding="5dp"
            android:maxLength="300"
            android:background="@drawable/bg_edittext"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/To_details_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#757475"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:text="您还可以输入300个字"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/To_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/blue1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>
