<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.credit.Activitys.CompanyDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/detail_top"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="30dp">

                        <ImageView
                            android:id="@+id/d_return"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="20dp"
                            android:background="@mipmap/arrow_left_back" />
                        <TextView
                            android:id="@+id/details_tit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:layout_toRightOf="@+id/d_return"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/details_tit"
                            android:gravity="center"
                            android:text="在业"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />
                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/details_logo"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/error_logo" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/d_more"
                            android:layout_width="30dp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/c_more" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/cp_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="江西科技有限公司"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:background="@drawable/details_toplogo"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="15dp"
                                android:background="@mipmap/details_top1" />

                            <TextView
                                android:id="@+id/details_tit1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="浏览量100"
                                android:textColor="@color/blue1"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/details_toplogo"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@mipmap/details_top2" />

                            <TextView
                                android:id="@+id/details_tit2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="联系企业"
                                android:textColor="@color/blue1"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/details_toplogo"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="15dp"
                                android:background="@mipmap/details_top3" />

                            <TextView
                                android:id="@+id/details_tit3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="订阅信息"
                                android:textColor="@color/blue1"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/vg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/details_c_tle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="企业基本信息"
                        android:textColor="#3A3331"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/state_iv"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/details_down" />

                    <TextView
                        android:id="@+id/state_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/state_iv"
                        android:text="展开"
                        android:textColor="#3A3331"
                        android:textSize="18sp" />

                </RelativeLayout>


                <com.example.credit.Views.MyGridView
                    android:id="@+id/myGridView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:background="#EEEEEE"
                    android:paddingRight="20dp"
                    android:numColumns="2"
                    android:visibility="gone" />

                <com.example.credit.Views.MyGridView
                    android:id="@+id/myGridView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#B8B8B8" />

                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_margin="30dp"-->
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_margin="30dp"
                    android:background="@mipmap/details_bottom" />
            </LinearLayout>

        </ScrollView>
        <include
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            layout="@layout/public_bottom_bar"/>

    </FrameLayout>
</LinearLayout>
