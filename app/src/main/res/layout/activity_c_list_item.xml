<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="com.example.credit.Activitys.PatentActivity">

    <RelativeLayout
        android:id="@+id/punlic_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/details_con_bg"
        android:padding="10dp">

        <ImageView
            android:id="@+id/im"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon12"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/im"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cl_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="行政处罚决定书文号"
                android:maxEms="12"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#000000"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/cl_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:text="跟鬼鬼鬼鬼鬼鬼鬼鬼鬼鬼"
                android:textColor="#B8B8B8"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报送年度"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/report_year"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年度报告"
                android:textColor="#57737D" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/time"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/im"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="2015-05-8"
                    android:layout_marginTop="5dp"
                    android:textColor="#B8B8B8"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="〉"
                android:layout_marginRight="5dp"
                android:textColor="@color/blue1"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_toStartOf="@+id/linearLayout"
            android:text="详情"
            android:textColor="@color/blue1"
            android:textSize="14sp" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/punlic_2"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/punlic_yy"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/huise"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/details_con_bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/youx"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/public_biaoti"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/cl2_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的专利独一无二我的专利独一无二我的专利独一无二"
                        android:textColor="#57737D" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/public_time"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/cl2_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015-05-15"
                        android:textColor="#57737D" />
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/jiant"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/public_jiantou"
                android:layout_marginRight="5dp"
                android:layout_marginTop="48dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue1"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/youx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:layout_marginTop="50dp"
                android:layout_toLeftOf="@id/jiant"
                android:textColor="@color/blue1"
                android:textSize="14sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/cl2_tv3"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="滑稽"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:background="@mipmap/public_biaoqian"
            android:textColor="#FFFFFF" />
    </FrameLayout>


</LinearLayout>
