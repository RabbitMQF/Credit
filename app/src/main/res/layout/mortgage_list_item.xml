<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <TextView
        android:id="@+id/title"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/details_gg_bg1"
        android:gravity="center"
        android:text=" 动产抵押信息 "
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/details_con_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="5dp">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="登记编号:"
             android:textColor="#000000"
             android:textSize="18sp"
             android:layout_marginRight="5dp"/>

         <TextView
             android:id="@+id/no"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="123123123131"
             android:textColor="#57737D"
             android:textSize="18sp" />
     </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登记日期:"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/register_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年11月12日"
            android:textColor="#57737D"
            android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公示时间:"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/public_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年11月12日-2020年11月20日"
            android:textColor="#57737D"
            android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被担保债权数额:"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/debts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100万"
                android:textColor="#57737D"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登记机关:"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南昌市西湖区人民法院"
            android:textColor="#57737D"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/Collateral1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵押物:"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/Collateral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿斯顿马丁 ONE-77"
            android:textColor="#57737D"
            android:textSize="18sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/Valuation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵押估值:"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/Valuation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4700万人民币"
            android:textColor="#57737D"
            android:textSize="18sp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情:"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="许可该机构经营中国银行业监督管理委员会依照有关法律、行政法规和其他规定批准的业务，经营范围以批准文件所列的为准。"
            android:textColor="#57737D"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

</LinearLayout>