<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.credit.Activitys.AboutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maintop_shape"
        android:gravity="center_horizontal" />

    <com.example.credit.Contacts.SearchEditText
        android:id="@+id/txt_filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@mipmap/search_drawable_left"
        android:background="@drawable/maintop_shape"
        android:hint="请输入关键字"
        android:paddingLeft="30dp"
        android:textSize="15.0dip" />

    <!-- contact user list -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/list_view_user_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"/>

        <TextView
            android:id="@+id/txt_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/fang_dialog"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <com.example.credit.Contacts.SideBar
            android:id="@+id/sild_bar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center|right"
            />

        <TextView
            android:id="@+id/txt_user_list_user_num"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35dp"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="123"
            android:textColor="#000000"
            android:textSize="12sp" />
    </FrameLayout>
</LinearLayout>
